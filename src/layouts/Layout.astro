---
// ./src/layouts/Layout.astro
import { VisualEditing } from "@sanity/astro/visual-editing";
import Navbar from "../components/Navbar.astro";
import backgroundImage from "../assets/background1.png";

const visualEditingEnabled =
  import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED == "true";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>T.W.A.T. | This Week in AlexTown</title>
    <style>
      /* Critical CSS for background */
      .bg-pattern {
        background-image: url("/background1.webp");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        position: relative;
      }

      /* Optimize background loading */
      @media (max-width: 640px) {
        .bg-pattern {
          background-image: url("/background1-mobile.webp");
        }
      }
    </style>
  </head>
  <body class="bg-pattern">
    <div class="bg-overlay">
      <Navbar />
      <slot />
      <VisualEditing enabled={visualEditingEnabled} />
    </div>
  </body>
</html>
